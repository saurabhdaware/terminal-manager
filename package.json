{
	"name": "terminal-manager",
	"displayName": "Terminal Manager",
	"description": "Choose which command line to use in single click ",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:extension.openUbuntu",
		"onView:terminal-manager"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
            "activitybar": [
                {
                    "id": "terminal-manager",
                    "title": "Terminal Manager",
                    "icon": "resources/terminal.png"
                }
            ]
		},
		"views": {
            "terminal-manager": [
                {
                    "id": "terminal-manager",
                    "name": "Terminals"
                }
            ]
        },
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.editTerminals",
				"title": "Edit Terminals",
				"icon":{
					"dark": "resources/edit.svg",
					"light": "resources/edit.svg"
				}
			},
			{
				"command": "extension.openUbuntu",
				"title": "Open Ubuntu Terminal"
			},
			{
				"command":"extension.gitbash",
				"title": "Git Bash"
			}
		],
		"menus":{
			"view/title": [
				{
					"command":"extension.editTerminals",
					"when":"view == terminal-manager",
					"group":"navigation"
				}
			]
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
